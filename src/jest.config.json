{
  "preset": "jest-preset-angular",
  "roots": [
    "<rootDir>/src/"
  ],
  "setupTestFrameworkScriptFile": "<rootDir>/src/setup-jest.ts",
  "reporters": [
    "default"
  ],
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    },
    "./src/*.ts": {
      "branches": 0,
      "functions": 0,
      "lines": 0,
      "statements": 0
    }
  },
  "errorOnDeprecated": true
}
